.editor-toolbar-toggle {
    border-radius: 2;
    border-width: 0;
    padding: 2 3 2 3;
    margin: 3 1 3 1;
}

.editor-toolbar-toggle:hover {
    background-color: var(--unity-colors-button-background-hover);
}

.editor-toolbar-toggle:checked{
    background-color: var(--unity-colors-button-background-hover_pressed);

}
